{
  "name": "crawl",
  "version": "1.0.0",
  "description": "A CLI tool to crawl websites and determine broken links.",
  "author": "Matt Kornatz <matt@mkornatz.com>",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "crawl": "index-cli.js"
  },
  "engines": {
    "node": ">=12.11.1 <13"
  },
  "scripts": {
    "crawl": "node -r esm index.js",
    "prettier": "prettier --write \"**/*.{mjs,js,jsx,json,md}\"",
    "test": "mocha --opts mocha.opts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "async": "^2.6.3",
    "cheerio": "^1.0.0-rc.3",
    "commander": "^2.20.1",
    "esm": "^3.2.25",
    "events": "^3.0.0",
    "lodash": "^4.17.15",
    "request": "^2.88.0",
    "url": "^0.11.0",
    "url-parse": "^1.4.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.17.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "mocha": "^5.0.0",
    "prettier": "^1.18.2",
    "static-server": "^3.0.0"
  },
  "lint-staged": {
    "*.{mjs,js,json}": [
      "npm run prettier",
      "git add"
    ]
  }
}
